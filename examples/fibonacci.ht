; Fibonacci in HiveSpeak — multiple approaches

; ─── Recursive (naive) ───
(def (fib-naive n)
  (if (<= n 1)
    n
    (add (fib-naive (sub n 1))
         (fib-naive (sub n 2)))))

(print (fmt "fib-naive(10) = {}" (fib-naive 10)))

; ─── Loop/Recur (O(n)) ───
(def (fib n)
  (loop [i 0 a 0 b 1]
    (if (= i n)
      a
      (recur (add i 1) b (add a b)))))

(print (fmt "fib(10) = {}" (fib 10)))
(print (fmt "fib(20) = {}" (fib 20)))
(print (fmt "fib(30) = {}" (fib 30)))

; ─── Generate sequence ───
(def (fib-seq n)
  (loop [i 0 a 0 b 1 result []]
    (if (= i n)
      result
      (recur (add i 1) b (add a b) (push result a)))))

(print (fmt "First 15: {}" (fib-seq 15)))
